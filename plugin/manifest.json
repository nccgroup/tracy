{
  "name": "Tracy",
  "description":
    "A tool designed to assist with finding all sinks and sources of a web application and display these results in a digestible manner.",
  "version": "0.2",
  "permissions": ["activeTab", "<all_urls>", "storage"],
  "background": {
    "scripts": ["scripts/background.js", "scripts/binary-integration.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://localhost/*", "*://127.0.0.1/*"],
      "all_frames": true,
      "js": ["scripts/dom-mutations.js", "scripts/highlight.js"],
      "css": ["css/dropdown.css"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Tracy",
    "default_icon": {
      "16": "images/tracy_16x16.png",
      "48": "images/tracy_48x48.png",
      "96": "images/tracy_96x96.png",
      "128": "images/tracy_128x128.png"
    }
  },
  "web_accessible_resources": [
    "scripts/method-hooking.js",
    "images/tracy_svg.svg"
  ],
  "manifest_version": 2,
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "icons": {
    "16": "images/tracy_16x16.png",
    "48": "images/tracy_48x48.png",
    "96": "images/tracy_96x96.png",
    "128": "images/tracy_128x128.png"
  }
}
